// @mixin
// @param Number weight [500]
body_font(weight = 500)
  font-family 'Avenir Medium' sans-serif // fallback
  font-weight weight

  @supports (font-variation-settings: normal) // variable
    font-family 'Avenir Variable', sans-serif
    font-variation-settings 'wght' weight

// @mixin
// @param Color color
// @param String thickness [3px]
css_icon_menu(color, thickness = 3px)
  width = (thickness * 6)
  border_top = (thickness * 3)
  border_bottom = thickness
  height = thickness

  &
    align-items center
    display inline-flex

  &::before
    border-bottom border_bottom solid color
    border-top border_top double color
    content ''
    height height
    width width

// @mixin
// @param Color color
// @param String size
// @param String direction
css_triangle(color, size, direction)
  if direction == 'up'
    border-bottom size solid color
    border-left size solid transparent
    border-right size solid transparent
  if direction == 'down'
    border-left size solid transparent
    border-right size solid transparent
    border-top size solid color
  if direction == 'right'
    border-bottom size solid transparent
    border-left size solid color
    border-top size solid transparent
  if direction == 'left'
    border-bottom size solid transparent
    border-right size solid color
    border-top size solid transparent
  height 0
  width 0

// @mixin
font_face()
  @font-face
    font-family 'Avenir Variable'
    src url('/ui/webfonts/AvenirNext-Variable.woff2') format('woff2')
    font-weight 1 999

  @font-face
    font-family 'Avenir Medium'
    src url('/ui/webfonts/AvenirLTStd-Medium.woff2') format('woff2'),
        url('/ui/webfonts/AvenirLTStd-Medium.woff') format('woff')
    font-weight 500

// @mixin
// @param Number weight
font_weight(weight)
  font-weight weight

  @supports (font-variation-settings: normal)
    font-variation-settings 'wght' weight

// @mixin
// @param Color link
// @param Color visited
// @param Color hover
// @param Color active
link(link, visited, hover, active)
  &
    &:link
      color link

    &:visited
      color visited

    &:active
      color active

  [no-touch]&
    &:hover
      color hover
