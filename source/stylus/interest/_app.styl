.app
  display grid
  grid-template-columns COLUMN_GAP auto COLUMN_GAP
  grid-template-rows HEADER_HEIGHT COLUMN_GAP 1fr auto BUTTON_ROW_HEIGHT_GRID
  min-height 100vh

  @media Breakpoints.SMALL
    grid-template-rows HEADER_HEIGHT COLUMN_GAP auto auto BUTTON_ROW_HEIGHT_GRID

  @media Breakpoints.MEDIUM
    grid-row-gap ROW_GAP
    grid-template-columns COLUMN_GAP_MEDIUM auto COLUMN_GAP_MEDIUM
    grid-template-rows HEADER_HEIGHT_MEDIUM auto 1fr 0

  @media Breakpoints.LARGE
    grid-column-gap COLUMN_GAP_MEDIUM
    grid-row-gap ROW_GAP_MEDIUM
    grid-template-columns 1fr '%s %s' 1fr % (VALUES_WIDTH_GRID TableDimensions.MAX_WIDTH)
    grid-template-rows HEADER_HEIGHT_MEDIUM auto 0
