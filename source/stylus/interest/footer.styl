.footer
  background var(--zebra-stripe)
  border-top 1px solid var(--border)
  color var(--symbol)
  grid-column 1 / span 3
  grid-row 6

  @media Breakpoint.MEDIUM
    grid-row 4

  @media Breakpoint.LARGE
    grid-column 1 / span 4
    grid-row 3

.footer__copyright
  font-size var(--f-copyright)
  margin 0
  padding px_to_rem(16) 0
  text-align center

.footer__link
  font_weight(600)
  link(var(--symbol), var(--symbol), var(--text), var(--text))
  transition color var(--transition)
