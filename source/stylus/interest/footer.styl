// TODO: theming for footer
.footer
  background white
  border-top 1px solid black
  grid-column 1 / span 3
  grid-row 6

  @media Breakpoint.MEDIUM
    grid-row 4

  @media Breakpoint.LARGE
    grid-column 1 / span 4
    grid-row 3

.footer__copyright
  font-size px_to_em(13)
  margin 0
  padding px_to_rem(16) 0
  text-align center

.footer__copyright > a
  color black




