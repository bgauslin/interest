.menu
  background white
  border-radius CORNER_RADIUS_MENU
  color var(--color-grey-dark)
  margin-top (GRID_GAP / 2)
  max-width 'calc(100vw - %s)' % GRID_GAP
  opacity 0
  position absolute
  right px_to_rem(-8)
  transition opacity var(--transition) ease-out, transform var(--transition) ease-out, visibility var(--transition) ease-out
  transform 'translateY(-%s)' % px_to_rem(12)
  visibility hidden
  z-index -1

  @media Breakpoint.MEDIUM
    margin-top -4px

.settings__toggle:checked + .menu
  opacity 1
  transform translateY(0)
  visibility visible

// Menu arrow.
.menu::before
  content ''
  css_triangle(white, ARROW_MENU, 'up')
  position absolute
  right 8px
  top (- ARROW_MENU)

// Menu container.
.menu__content
  display flex
  -webkit-overflow-scrolling touch
  overflow-x auto
  max-width 100%
  width 100%

.menu__group
  padding '%s' % Elements.Menu.PADDING

.menu__group:not(:last-child)
  border-right 1px solid var(--color-grey-medium)

// Settings lists.
.menu__list
  display flex
  list-style none
  margin 0
  padding 0

.item:not(:last-child)
  margin 0 px_to_rem(12) 0 0

.item__label
  display block
  height '%s' % Elements.Menu.ITEM_SIZE
  overflow hidden
  position relative
  width '%s' % Elements.Menu.ITEM_SIZE

[no-touch] .item__label:hover
  cursor pointer

// Settings options.
.option
  position absolute
  top -20px

.option__label
  align-items center
  border-radius 50%
  display inline-flex
  height '%s' % Elements.Menu.ITEM_SIZE
  justify-content center
  position relative
  width '%s' % Elements.Menu.ITEM_SIZE
  z-index -1

[no-touch] .option__label
  transition border var(--transition)

// Styles for different option types.
[data-type=currency] .option__label
  background var(--color-off-white)
  border 3px solid var(--color-grey-lighter)
  color var(--color-grey-light)
  font-size var(--f-menu-item)

[data-type=currency] .option:checked + .option__label
  background white
  color var(--color-green)

[data-type=theme] .option__label
  border 3px solid var(--color-grey-lighter)
  color transparent

.option__label[data-option=light]
  background white

.option__label[data-option=sepia]
  background '%s' % Theme.SEPIA

.option__label[data-option=dark]
  background '%s' % Theme.DARK

.option:checked + .option__label
  border-color var(--color-green)

[no-touch] .item__label:hover .option:not(:checked) + .option__label
  border-color var(--color-grey-light)
