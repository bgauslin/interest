[no-js] .app
  align-items center
  background var(--off-white)
  display flex
  flex-direction column
  justify-content center
  min-height 100vh

[no-js] .values
[no-js] .table
  display none

.no-js
  padding 1rem

.no-js__message
  background white
  border 1px solid var(--lighter-grey)
  border-radius 4px
  margin 0 auto
  padding 1rem
  text-align center

  @media Breakpoint.MEDIUM
    max-width 30rem
    padding 2rem