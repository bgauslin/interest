THEMES = {
  light: {
    BACKGROUND: white
    BORDER: mix(black, white, 15%)
    CANVAS: mix(black, white, 2%)
    INPUT: black
    INPUT_BORDER: mix(black, white, 15%)
    SYMBOL: rgba(black, .5)
    TEXT: rgba(black, .8)
    ZEBRA_STRIPE: mix(black, white, 3%)
  },
  sepia: {
    BACKGROUND: ThemeColors.SEPIA
    BORDER: '%s' % mix(black, ThemeColors.SEPIA, 15%)
    CANVAS: '%s' % mix(black, ThemeColors.SEPIA, 5%)
    INPUT: '%s' % mix(black, ThemeColors.SEPIA, 90%)
    INPUT_BORDER: '%s' % mix(black, ThemeColors.SEPIA, 30%)
    SYMBOL: '%s' % mix(black, ThemeColors.SEPIA, 50%)
    TEXT: '%s' % mix(black, ThemeColors.SEPIA, 80%)
    ZEBRA_STRIPE: '%s' % mix(black, ThemeColors.SEPIA, 4%)
  },
  dark: {
    BACKGROUND: ThemeColors.DARK
    BORDER: mix(black, white, 75%)
    CANVAS: '%s' % mix(black, ThemeColors.DARK, 25%)
    INPUT: rgba(white, .85)
    INPUT_BORDER: mix(black, white, 65%)
    SYMBOL: rgba(white, .5)
    TEXT: rgba(white, .7)
    ZEBRA_STRIPE: '%s' % mix(black, ThemeColors.DARK, 10%)
  }
}

// NOTE: Semicolons after each property to avoid Stylus compiler complaints.
for name, theme in THEMES
  [data-theme=\"{name}\"]
    {body}&
      background theme['BACKGROUND'];
      color theme['TEXT'];

    .values__input
      border-bottom 2px solid theme['INPUT_BORDER'];

    .values__input:not(:focus)
      color theme['INPUT'];

    .table__frame
    tr:first-child
      border-bottom 1px solid theme['BORDER'];

    tr:nth-child(even)
      background theme['ZEBRA_STRIPE'];

    td.growth::after
    td.deposits::before
    td.interest::before
    td.balance::before
    .rotate-screen
      color theme['SYMBOL'];

    .rotate-screen span
      color theme['TEXT'];

    @media Breakpoints.SMALL
      {body}&
        background theme['CANVAS'];

      .values
      .table__data
        background theme['BACKGROUND'];

      .values
      .table__frame
        border 1px solid theme['BORDER'];
