.toggle
  align-self center
  grid-column 2 / 3
  grid-row 5 / span 1
  justify-self center
  transition '%s %s %s' % (margin Transitions.DEFAULT ease)

  @media Breakpoints.MEDIUM
    display none !important // hide the button since we don't need it

.toggle__button
  align-items center
  appearance none
  background '%s' % Colors.GREEN
  body_font()
  border 2px solid '%s' % Colors.GREEN
  border-radius '%s' % (Buttons.HEIGHT / 2)
  color white
  display inline-flex
  font-size px_to_em(14)
  font_weight(600)
  height '%s' % Buttons.HEIGHT
  justify-content center
  line-height 1
  opacity 1
  padding 0 px_to_rem(12) 0 0 // adjust for toggle arrow
  transition '%s %s, %s %s' % (opacity Transitions.DEFAULT visibility Transitions.DEFAULT)
  visibility visibile
  width 50vw
  white-space nowrap

  @media Breakpoints.SMALL
    width 33vw

.toggle__button[data-hidden]
  opacity 0
  visibility hidden

[no-touch] .toggle__button
  transition '%s %s %s, %s %s %s, %s %s %s' % (border Transitions.DEFAULT ease color Transitions.DEFAULT ease opacity Transitions.DEFAULT ease)

.toggle__button:focus
.toggle__button:active
[no-touch] .toggle__button:hover
  background 0
  color '%s' % Colors.GREEN
  cursor pointer

.toggle__button::before
  css_triangle(white, ARROW_SIZE_TOGGLE, 'down')
  content ''
  display inline-block
  margin-right px_to_rem(8)
  transition '%s %s' % (transform Transitions.DRAWER)

.toggle__button[data-target="visible"]::before
  transform rotate(-180deg)

.toggle__button:focus::before
.toggle__button:active::before
[no-touch] .toggle__button:hover::before
  border-top-color '%s' % Colors.GREEN
