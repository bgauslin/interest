.values
  align-self center
  display flex
  flex-direction column
  grid-column 2
  grid-row 3
  justify-content center
  justify-self stretch
  overflow hidden
  padding '%s' % Elements.Card.PADDING

  @media Breakpoint.SMALL
    align-self start
    border-radius '%s' % Elements.Card.CORNER_RADIUS

  @media Breakpoint.MEDIUM
    grid-row 2

  @media Breakpoint.LARGE
    grid-column 2
    position sticky
    top '%s' % (Elements.Header.HEIGHT.Medium + GRID_GAP_MEDIUM)

.values__list
  list-style none
  margin 0 auto
  padding 0

  @media Breakpoint.SMALL
    display flex
    flex-wrap wrap

  @media Breakpoint.LARGE
    display block
    margin 0

.values__item
  align-items center
  display flex
  justify-content space-between
  margin 0 0 px_to_rem(16)

  @media Breakpoint.SMALL
    flex 0 0 50%

#compounds
  display none

@media Breakpoint.SMALL
  #principal
    order 1
  #rate
    order 2
  #contribution
    order 3
  #periods
    order 4

.values__label
  flex 1
  line-height 1
  margin-left px_to_rem(12)
  order 2
  white-space nowrap

#rate .values__label::before
  content '% '

.values__input
  appearance none
  background 0
  body_font()
  border 0
  border-bottom 2px solid var(--input-border)
  border-radius 0
  font-size '%s' % FontSize.Base.INPUT
  height '%s' % Elements.Input.HEIGHT
  line-height 1
  order 1
  padding 0
  text-align right
  width '%s' % Elements.Input.WIDTH

.values__input:focus
  border-color var(--color-green)
  color var(--color-green)

.values__input:focus:invalid
  border-color var(--color-warning)
  color var(--color-warning)

.values__input:not(:focus)
  color var(--input)

.values__total
  color var(--color-green)
  font-size '%s' % FontSize.Base.VALUES_TOTAL
  height '%s' % FontSize.Base.VALUES_TOTAL
  line-height '%s' % FontSize.Base.VALUES_TOTAL
  margin 1rem auto 0
  max-width 'calc(100vw - %s)' % (2 * (GRID_GAP + Elements.Card.PADDING))
  opacity 1
  overflow hidden
  text-align center
  text-overflow ellipsis
  transition opacity var(--transition), visibility var(--transition)
  visibility visible

  &[data-hidden]
    opacity 0
    visibility hidden

  @media Breakpoint.LARGE
    margin .5rem 0 00
    text-align left
