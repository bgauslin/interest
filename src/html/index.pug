- const title = "Compound Interest Calculator"
- const description = "Progressive web app for calculating compound interest"
- const currentYear = new Date().getFullYear()

doctype html
html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-title" content="Interest")
    meta(name="description" content=description)
    meta(name="theme-color" content="#00ad45")
    meta(name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover")
    link(rel="apple-touch-icon" href="/apple-touch-icon.png")
    link(rel="icon" type="image/svg+xml" href="/favicon.svg")
    link(rel="manifest" href="/pwa/manifest.json")
    link(
      rel="preload"
      href="https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin="crossorigin"
    )
  body(no-js no-touch)
    shifty-header
      header
        h1= title
        user-settings
    main
      noscript Please <a href="https://www.enable-javascript.com/" title="How to enable JavaScript in your browser">enable JavaScript</a> to view this app.
      user-values(for="data")
      expand-able(id="expandable" for="panel" label="table")
      .panel(id="panel")
        .table-frame
          table(id="data")
        p.rotate-screen Rotate screen to view <span>Interest</span> and <span>Growth</span> columns.
    footer
      a(
        href="https://gauslin.com"
        title="Visit Ben Gauslin’s Website"
      ) © #{currentYear} Ben Gauslin
    visibility-toggle(source=".total" targets="#expandable, #panel")
    x-tools
  if (process.env.NODE_ENV === 'development')
    script(src="https://css.gauslin.com/debugger.js" data-src="/breakpoints.json")
