- const label = 'Settings'

button(
  id="settings-toggle"
  title=label
  aria-controls="menu"
  aria-expanded="false"
  aria-haspopup="true"
  aria-label=label
  tabindex="0"
)
  svg(
    viewbox="0 0 24 24"
    aria-hidden="true"
  )
    circle(cx="4" cy="12" r="2.5")
    circle(cx="12" cy="12" r="2.5")
    circle(cx="20" cy="12" r="2.5")
div(
  id="menu"
  aria-labelledby="settings-toggle"
  aria-hidden="true"
)
  div
    each setting in settings
      ul(setting=setting.name)
        each option in setting.options
          li(type=setting.name)
            label(
              for=option.value
              tabindex="0"
            )
              input(
                type="radio"
                name=setting.name
                value=option.value
                tabindex="-1"
              )
              span(option=option.value)= option.label
