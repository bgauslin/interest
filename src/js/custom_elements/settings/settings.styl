user-settings
  margin-inline-end var(--margin-inline-end)
  position relative

user-settings > button
  background var(--button-background)
  border-radius (BUTTON_HEIGHT / 2)
  color var(--primary-text-color)
  cursor pointer
  display flex
  height BUTTON_HEIGHT
  opacity 1
  transition background TRANSITION, transform TRANSITION
  width BUTTON_HEIGHT

  @supports (backdrop-filter BACKDROP_EFFECT)
    backdrop-filter var(--button-backdrop-filter)
    background var(--button-backdrop-background)

  &:active
  &:focus
  &[aria-expanded='true']
  [no-touch] &:hover
    background var(--background-2)

  &:active
    transform scale(.9)

user-settings > button svg
  fill currentColor
  flex 0 0 rem(20)
  margin auto
  pointer-events none
