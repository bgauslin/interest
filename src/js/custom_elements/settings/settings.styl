user-settings
  margin-right rem(-12)
  position relative
  
  @media breakpoint.small
    margin-right 0

user-settings > button
  border-radius 50%
  color var(--text-1-color)
  cursor pointer
  display flex
  height button-height
  opacity 1
  transition background transition, transform transition
  width button-height

  @media breakpoint.large
    background var(--header-background)

    @supports (backdrop-filter backdrop-effect)
      backdrop-filter backdrop-effect
      background var(--header-backdrop-background)

  &:active
  &:focus
  &[aria-expanded='true']
  [no-touch] &:hover
    background var(--background-2)

  &:active
    transform scale(.9)

  svg
    fill currentColor
    flex 0 0 rem(20)
    margin auto
    pointer-events none
