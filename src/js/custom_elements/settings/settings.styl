user-settings
  position relative
  right rem(-12)
  z-index 1

user-settings > button
  border-radius 50%
  color var(--text-1-color)
  cursor pointer
  display flex
  height button-height
  opacity 1
  transition opacity transition, transform transition
  width button-height

  @media breakpoint.large
    backdrop-filter backdrop-effect

  &:focus
  [no-touch] &:hover
    transform scale(1.25)

  [no-touch] &:hover
    opacity .75

  &:active
    transform scale(.85)

  > svg
    flex 0 0 rem(20)
    margin auto
    pointer-events none
