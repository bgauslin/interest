shifty-header
  background brand-color
  color var(--background) // [1]
  height var(--header-height)
  left 0
  padding 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)
  position fixed
  right 0
  top 0
  transform translate3d(0, var(--sticky-shift), 0)
  z-index 2

shifty-header > div
  align-items center
  display flex
  height var(--header-height)
  justify-content space-between
  margin 0 auto
  max-width content-width-large
  padding 0 var(--grid-gap)

  @media breakpoint.large
    padding 0

shifty-header h1
  font-size var(--site-header)
  line-height 1
  margin 0
  white-space nowrap
