// [1] Make variable font commas and decimal points align across table cells.
// [2] Table should always display at this breakpoint and higher.
.table
  box-sizing border-box
  font-variant-numeric tabular-nums // [1]
  height auto
  justify-self stretch
  margin 0
  opacity 1
  overflow-x auto
  overflow-y hidden
  text-align center
  transition height transition-slow ease-out, opacity transition-slow ease-out
  
  @media breakpoint.medium
    height auto !important // [2]
    opacity 1

  @media breakpoint.large
    justify-self stretch
    margin-top var(--grid-gap)
    padding 0

.table[hidden]
  display none

.table[expanded]
  margin-bottom rem(16)

  @media breakpoint.medium
    margin-bottom 0

.table__frame
  border-bottom 1px solid var(--border)
  overflow-x auto

  @media breakpoint.small
    border 1px solid var(--border)
    border-radius card-corner-radius

@media breakpoint.small
  .table__data
    background var(--background)

th
td
  padding var(--table-padding-y) var(--table-padding-x)

  &:first-child
    text-align left
    padding-left grid-gap

    @media breakpoint.small
      padding-left var(--table-padding-x)

  &:last-child
    padding-right grid-gap

    @media breakpoint.small
      padding-right var(--table-padding-x)

  &.balance
    padding-right grid-gap

    @media breakpoint.small
      padding-right var(--table-padding-x)

thead > tr
  border-bottom 1px solid var(--border)

tbody > tr:nth-child(odd)
  background var(--zebra-stripe)

td.growth::after
td.deposits::before
td.interest::before
td.balance::before
  color var(--symbol)

td.growth::after
  content '%'
  margin-left em(4)

.year
  padding-right 0

.growth
.interest
  display none

  @media breakpoint.small
    display table-cell

.rotate-screen
  color var(--symbol)
  display none
  font-size var(--fineprint)
  margin rem(12) grid-gap 0

  @media screen and (max-width breakpoint-small-units) and (orientation portrait)
    display block

.rotate-screen span
  color var(--text)

[no-js] .table
  display none