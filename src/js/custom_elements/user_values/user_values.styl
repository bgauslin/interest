user-values
  align-self center
  display flex
  flex-direction column
  grid-area values
  justify-content center
  overflow hidden
  padding card-padding

  @media breakpoint.small
    align-self start
    background var(--background-1)
    border 1px solid var(--card-border-color, border-color)
    border-radius card-corner-radius

    // Reorder fields for side-by-side layout at small breakpoint.
    [field=principal]
      order 1
    [field=rate]
      order 2
    [field=contribution]
      order 3
    [field=periods]
      order 4

  @media breakpoint.large
    position sticky
    top var(--header-height)

  [no-js] &
    display none

  & > ul
    list-style none
    margin 0 auto
    padding 0

    @media breakpoint.small
      display flex
      flex-wrap wrap

    @media breakpoint.large
      display block
      margin 0

  li
    align-items center
    display flex
    margin 0 0 rem(16)

    // Place fields in side-by-side layout to reduce vertical real estate at
    // small breakpoint
    @media breakpoint.small
      flex 0 0 50%

  label
    flex 1
    line-height 1
    margin-left rem(8)
    opacity .8
    order 2
    white-space nowrap

    &[for=rate]::before
      content '% '

  input
    border-bottom 2px solid var(--input-border-color, border-color)
    border-top 2px solid transparent
    border-radius 0
    font-family 'Avenir Variable', sans-serif
    font-size inherit
    height rem(32)
    line-height 1
    order 1
    padding 0
    text-align right
    width rem(88)

    &:focus
      border-bottom-color var(--theme-color)
      color var(--theme-color)

    &:focus:invalid
      border-bottom-color var(--warning-color)
      color var(--warning-color)

    &:not(:focus)
      color var(--text-1-color)

.total
  color var(--theme-color)
  font-size values-total-size
  height values-total-size
  line-height values-total-size
  margin 1rem auto 0
  max-width 'calc(100vw - %s)' % (2 * (grid-gap + card-padding))
  opacity 1
  overflow hidden
  text-align center
  text-overflow ellipsis
  transition opacity transition, visibility transition
  visibility visible

  @media breakpoint.large
    margin .5rem 0 0
    text-align left

  &[empty]
    opacity 0
    visibility hidden
