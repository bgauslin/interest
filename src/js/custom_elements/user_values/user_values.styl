user-values
  align-self center
  display flex
  flex-direction column
  grid-area values
  justify-content center
  overflow hidden
  padding CARD_PADDING
  position var(--position)
  top var(--top)

user-values > ul
  display var(--list-display)
  flex-wrap wrap
  list-style none
  margin var(--list-margin)
  padding 0

user-values li
  align-items center
  display flex
  flex var(--item-flex)
  margin 0 0 rem(16)

user-values label
  flex 1
  line-height 1
  margin-inline-start rem(8)
  opacity .8
  order 2
  white-space nowrap

user-values [for='rate']::before
  content '% '

user-values input
  border-bottom 2px solid var(--input-border-color, BORDER_COLOR)
  border-top 2px solid transparent
  border-radius 0
  font-family 'Avenir Variable', sans-serif
  font-size inherit
  height rem(32)
  line-height 1
  order 1
  padding 0
  text-align end
  width rem(88)

  &:focus
    border-bottom-color var(--theme-color)
    color var(--theme-color)

  &:focus:invalid
    border-bottom-color var(--warning-color)
    color var(--warning-color)

  &:not(:focus)
    color var(--primary-text-color)

user-values .total
  color var(--theme-color)
  font-size VALUES_TOTAL_SIZE
  height VALUES_TOTAL_SIZE
  line-height VALUES_TOTAL_SIZE
  margin var(--total-margin)
  max-width 'calc(100vw - %s)' % (2 * (GAP + CARD_PADDING))
  opacity 1
  overflow hidden
  text-align var(--total-text-align)
  text-overflow ellipsis
  transition opacity TRANSITION, visibility TRANSITION
  visibility visible

user-values .total[empty]
  opacity 0
  visibility hidden

[no-js] user-values
  display none

// Reorder fields for side-by-side layout at small breakpoint.
@media Breakpoint.SMALL
  user-values
    align-self start
    background var(--background-1)
    border 1px solid var(--card-border-color, BORDER_COLOR)
    border-radius CARD_CORNER_RADIUS

  user-values [field='principal']
    order 1

  user-values [field='rate']
    order 2

  user-values [field='contribution']
    order 3

  user-values [field='periods']
    order 4
