// Colors.
background-dark = #262626
background-light = #f9f9f9

// Transitions.
transition = .3s
transition-slow = .5s

// Dimensions.
breakpoint-small-units = rem(420)
button-height = rem(40)
card-corner-radius = rem(8)
card-padding = rem(24)
grid-gap = rem(16)
grid-gap-medium = rem(24)
menu-arrow = rem(16)
menu-item-size = rem(40)
table-max-width = rem(640)
values-max-width = rem(240)
values-total-size = rem(32)

// Calculated constants and breakpoints.
values-grid-width = values-max-width + (2 * card-padding)
content-width-large = (values-max-width + (2 * card-padding)) + table-max-width + grid-gap-medium

breakpoint = {
  small:  'screen and (min-width: %s)' % breakpoint-small-units
  medium: 'screen and (min-width: %s)' % (table-max-width + (grid-gap-medium * 2))
  large:  'screen and (min-width: %s)' % (content-width-large + (grid-gap-medium * 2))
}
