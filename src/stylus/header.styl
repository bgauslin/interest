header
  background var(--header-background)
  grid-area header
  height var(--header-height)
  left 0
  padding-block 0
  padding-inline env(safe-area-inset-left) env(safe-area-inset-right)
  position fixed
  right 0
  top 0
  z-index 2

  @supports (backdrop-filter BACKDROP_EFFECT)
    backdrop-filter var(--header-backdrop-filter)
    background var(--header-backdrop-background)

header > div
  align-items center
  display flex
  height var(--header-height)
  justify-content space-between
  margin 0 auto
  max-width CONTENT_WIDTH_LARGE
  padding var(--header-content-padding)

header h1
  font-size var(--header-font-size)
  line-height 1
  margin 0
  white-space nowrap
