.expandable
  align-self center
  justify-self center
  opacity 1
  transition opacity var(--transition) ease

  @media Breakpoint.MEDIUM
    display none !important // hide the button since we don't need it

.expandable[hidden]
  opacity 0
  pointer-events none

// [1] Knockout via theme's body background.
// [2] Adjust right padding to coordinate with toggle arrow.
.expandable__button
  webfont(600)
  align-items center
  background var(--green)
  border 2px solid var(--green)
  border-radius (BUTTON_HEIGHT / 2)
  color var(--background) // [1]
  display flex
  font-size em(14)
  height BUTTON_HEIGHT
  justify-content center
  line-height 1
  padding 0 rem(12) 0 0 // [2]
  width 50vw
  white-space nowrap

  @media Breakpoint.SMALL
    width 33vw

[no-touch] .expandable__button
  transition border var(--transition) ease, color var(--transition) ease

.expandable__button:focus
.expandable__button:active
[no-touch] .expandable__button:hover
  background 0
  color var(--green)
  cursor pointer

// [1] Knockout via theme's body background.
.expandable__button::before
  css_triangle(var(--background), 5px, 'down') // [1]
  content ''
  display inline-block
  margin-right rem(8)
  transition transform var(--transition-slow)

.expandable[expanded] > .expandable__button::before
  transform rotate(-180deg)

.expandable__button:focus::before
.expandable__button:active::before
[no-touch] .expandable__button:hover::before
  border-top-color var(--green)
