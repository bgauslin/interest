.footer
  align-items center
  color var(--text)
  display flex
  grid-column 2
  grid-row 3
  height var(--footer-height)
  justify-content center

.copyright
  font-size var(--fineprint)
  margin 0
  padding 0
  text-align center

.copyright__years
  margin-right px_to_em(8)

.copyright__owner
  link(var(--text), var(--text), var(--symbol), var(--symbol))
  transition color var(--transition)
