all_webfonts()

html
body
  webfont()
  margin 0
  padding 0
  -webkit-tap-highlight-color transparent
  text-size-adjust none

body
  background var(--background)
  color var(--text)
  display grid
  grid-template-columns var(--grid-gap) 1fr var(--grid-gap)
  grid-template-rows var(--header-height) var(--grid-gap) 1fr auto BUTTON_ROW_HEIGHT auto
  min-height 100vh // fallback
  min-height calc(var(--viewport-unit, 1vh) * 100)

  @media Breakpoint.SMALL
    background var(--canvas)

  @media Breakpoint.MEDIUM
    grid-row-gap var(--grid-gap)
    grid-template-rows var(--header-height) auto 1fr auto

  @media Breakpoint.LARGE
    grid-gap var(--grid-gap)
    grid-template-columns 1fr VALUES_GRID_WIDTH TABLE_MAX_WIDTH 1fr
    grid-template-rows var(--header-height) 1fr auto

*
  box-sizing border-box

a
  text-decoration none

input
button
  appearance none
  background 0
  border 0
  margin 0
  padding 0

input[type=radio]
  height 0
  width 0

input[type=number]
  &::-webkit-inner-spin-button
  &::-webkit-outer-spin-button
    appearance none
    margin 0

input:focus
button:focus
  outline 0

table
  border-collapse collapse
  font-size var(--table)
  width 100%

th
td
  text-align right
  white-space nowrap

th
  webfont_weight(600)

svg path
  fill currentColor
