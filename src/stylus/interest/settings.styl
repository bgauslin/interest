.settings
  position relative
  z-index 1

// [1] Knockout via theme's body background.
.settings__toggle
  align-items center
  color var(--background) // [1]
  cursor pointer
  display flex
  height var(--header-height)
  justify-content center
  margin 0 rem(-12) 0 0
  opacity 1
  transition opacity TRANSITION_SPEED, transform TRANSITION_SPEED
  width var(--header-height)

  @media Breakpoint.MEDIUM
    margin-right rem(-20)

.settings__toggle:focus
  transform scale(1.25)

.settings__toggle:active
  transform scale(.85)

[no-touch] .settings__toggle:hover
  opacity .75

.settings__icon
  flex 0 0 rem(20)
  pointer-events none
