.values
  align-self center
  display flex
  flex-direction column
  justify-content center
  overflow hidden
  padding CARD_PADDING

  @media Breakpoint.SMALL
    align-self start
    border-radius CORNER_RADIUS_CARD
    margin-top var(--grid-gap)

  @media Breakpoint.LARGE
    position sticky
    top calc(var(--sticky-offset) + var(--grid-gap))

.values__list
  list-style none
  margin 0 auto
  padding 0

  @media Breakpoint.SMALL
    display flex
    flex-wrap wrap

  @media Breakpoint.LARGE
    display block
    margin 0

.values__item
  align-items center
  display flex
  margin 0 0 rem(16)

  @media Breakpoint.SMALL
    flex 0 0 50%

@media Breakpoint.SMALL
  #principal
    order 1
  #rate
    order 2
  #contribution
    order 3
  #periods
    order 4

.values__label
  flex 1
  line-height 1
  margin-left rem(8)
  order 2
  white-space nowrap

#rate .values__label::before
  content '% '

.values__input
  webfont()
  border-bottom 2px solid var(--input-border)
  border-top 2px solid transparent
  border-radius 0
  font-size var(--input)
  height rem(32)
  line-height 1
  order 1
  padding 0
  text-align right
  width rem(88)

.values__input:focus
  border-bottom-color var(--green)
  color var(--green)

.values__input:focus:invalid
  border-bottom-color var(--warning)
  color var(--warning)

.values__input:not(:focus)
  color var(--input)

.values__total
  color var(--green)
  font-size var(--total)
  height var(--total)
  line-height var(--total)
  margin 1rem auto 0
  max-width 'calc(100vw - %s)' % (2 * (GRID_GAP + CARD_PADDING))
  opacity 1
  overflow hidden
  text-align center
  text-overflow ellipsis
  transition opacity var(--transition), visibility var(--transition)
  visibility visible

  @media Breakpoint.LARGE
    margin .5rem 0 0
    text-align left

.values__total[empty]
  opacity 0
  visibility hidden
