main
  display grid
  grid-area main
  grid-template-areas:
    'values'\
    'table'\
    'expandable'
  grid-template-rows minmax(auto, 1fr) auto (button-height * 2)
  margin 0 auto
  max-width content-width-large
  min-height calc((var(--vh) * 100) - var(--header-height))
  padding 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)
  width 100%

  @media breakpoint.small
    grid-gap var(--grid-gap)
    grid-template-areas:
      '.'\
      'values'\
      'table'\
      'expandable'
    grid-template-rows 0 minmax(auto, 1fr) auto (button-height * 2)

  @media breakpoint.large
    grid-template-areas:
      '. .'\
      'values table'\
      'expandable expandable'
    grid-template-columns values-grid-width 1fr
    grid-template-rows 0 1fr auto

[no-js] main
  align-self center
  grid-column 2
  grid-row 2
  grid-template-columns 1fr !important
  grid-template-rows 1fr !important
  text-align center
