main
  display grid
  grid-area main
  grid-template-areas:
    'values'\
    'table'\
    'expandable'\
  grid-template-rows minmax(auto, 1fr) auto (button-height * 3)
  margin 0 auto
  max-width content-width-large
  padding 0 env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)
  width 100%

  @media breakpoint.small
    grid-gap var(--grid-gap)
    grid-template-areas:
      'values'\
      'table'\
      'expandable'\
      '.'
    grid-template-rows minmax(auto, 1fr) auto (button-height * 3) 0

  @media breakpoint.large
    grid-template-areas:
      'values table'\
      'expandable expandable'\
      '. .'
    grid-template-columns values-grid-width 1fr
    grid-template-rows 1fr auto 0

[no-js] main
  align-self center
  grid-column 2
  grid-row 2
  grid-template-columns 1fr !important
  grid-template-rows 1fr !important
  text-align center
