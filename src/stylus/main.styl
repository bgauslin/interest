main
  display grid
  grid:
    'values' minmax(auto, 1fr) \
    'table' \
    'expandable' (button-height * 3)
  grid-area main
  margin 0 auto
  max-width content-width-large
  padding 0 env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)
  width 100%

  @media breakpoint.small
    grid:
      '.' 0 \
      'values' minmax(auto, 1fr) \
      'table' \
      'expandable' (button-height * 3) \
      '.' 0
    grid-gap var(--grid-gap)

  @media breakpoint.large
    grid:
      'values table' 1fr \
      'expandable expandable' 0 \
      '. .' 0 / values-grid-width 1fr

[no-js] main
  align-self center
  grid unset

