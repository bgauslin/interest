// Outer wrapper for a table that makes its overflowing content scrollable.
.table-frame
  border var(--frame-border)
  border-radius var(--frame-border-radius)
  overflow-x auto

// Table styles for first/last cells and alternating rows.
table
  background var(--table-background)
  font-variant-numeric tabular-nums // Align commas and decimal points across cells.

th
td
  padding var(--table-padding-y) var(--table-padding-x)

  &:first-child
    text-align left
    padding-left var(--first-item-padding-x-start)

  &:last-child
  &.balance
    padding-right var(--last-item-padding-x-end)

thead > tr
  border-bottom var(--thead-border-bottom)

tbody > tr:nth-child(odd)
  background var(--table-row-background, table-row-background)

// Table classnames.
.year
  padding-right 0

.growth
.interest
  display none

  @media breakpoint.small
    display table-cell

td.growth::after
td.deposits::before
td.interest::before
td.balance::before
  color var(--text-2-color)

td.growth::after
  content '%'
  margin-left em(4)

// Footnotes after the table.
.rotate-screen
  color var(--text-2-color)
  display none
  font-size var(--fineprint-font-size)
  margin rem(12) gap 0

  @media screen and (max-width breakpoint-small-units) and (orientation portrait)
    display block

.rotate-screen > span
  color var(--text-1-color)
