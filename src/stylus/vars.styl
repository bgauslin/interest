:root
  // Layout and typography.
  --fineprint rem(12)
  --footer-height rem(48)
  --grid-gap grid-gap
  --header-height rem(48)
  --input rem(20)
  --site-header rem(16)
  --table rem(13)
  --table-padding-x em(12)
  --table-padding-y em(8)

  @media breakpoint.medium
    --fineprint rem(14)
    --footer-height rem(60)
    --grid-gap grid-gap-medium
    --header-height rem(60)
    --site-header rem(20)
    --table rem(15)

  @media breakpoint.large
    --table-padding-x em(16)

  // Light/dark theme.
  --background white
  --border mix(black, white, 15%)
  --canvas mix(black, white, 2%)
  --input black
  --input-border mix(black, white, 15%)
  --symbol rgba(black, .5)
  --text rgba(black, .8)
  --zebra-stripe mix(black, white, 3%)

  @media (prefers-color-scheme dark)
    --background theme-dark
    --border mix(black, white, 75%)
    --canvas mix(black, theme-dark, 25%)
    --input rgba(white, .85)
    --input-border mix(black, white, 65%)
    --symbol rgba(white, .5)
    --text rgba(white, .7)
    --zebra-stripe mix(black, theme-dark, 10%)
