
:root
  // Layout and typography.
  --fineprint rem(12)
  --grid-gap grid-gap
  --header-height rem(48)
  --input rem(20)
  --site-header rem(16)
  --table rem(13)
  --table-padding-x em(12)
  --table-padding-y em(8)

  @media breakpoint.medium
    --fineprint rem(14)
    --grid-gap grid-gap-medium
    --header-height rem(60)
    --site-header rem(20)
    --table rem(15)

  @media breakpoint.large
    --table-padding-x em(16)

  // Light/dark theme.
  --body-background background-light
  --brand-color #00ad45
  --card-border #ccc
  --card-background white
  --header-background rgba(background-light, .33)
  --input black
  --input-border #ccc
  --label-background #f7f7f7
  --label-color #aaa
  --menu-background white
  --menu-shadow elevation(2)
  --symbol rgba(black, .5) 
  --text rgba(black, .8)
  --warning #c00
  --zebra-stripe mix(black, white, 3%)
  
  @media (prefers-color-scheme dark)
    --body-background background-dark
    --brand-color #4dc67d
    --card-background mix(white, background-dark, 5%)
    --card-border 0
    --header-background rgba(background-dark, .33)
    --input rgba(white, .85)
    --input-border #555
    --label-background transparent
    --label-color #888
    --menu-background mix(white, background-dark, 5%)
    --menu-shadow 0 0 0 1px #555
    --symbol rgba(white, .5)
    --text rgba(white, .7)
    --warning #db4d4d
    --zebra-stripe mix(white, background-dark, 8%)
