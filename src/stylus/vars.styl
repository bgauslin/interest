:root
  // Layout and typography.
  --fineprint rem(12)
  --footer-height rem(48)
  --grid-gap grid-gap
  --header-height rem(48)
  --input rem(20)
  --site-header rem(16)
  --table rem(13)
  --table-padding-x em(12)
  --table-padding-y em(8)

  @media breakpoint.medium
    --fineprint rem(14)
    --footer-height rem(60)
    --grid-gap grid-gap-medium
    --header-height rem(60)
    --site-header rem(20)
    --table rem(15)

  @media breakpoint.large
    --table-padding-x em(16)

  // Light/dark theme.
  --brand-color #00ad45

  --body-background mix(black, white, 2%)
  --card-background white
  --zebra-stripe mix(black, white, 3%)
  
  --border #ccc
  --input black
  --label-background #f7f7f7
  --label-color #aaa
  --symbol rgba(black, .5) 
  --text rgba(black, .8)
  --warning #c00

  @media (prefers-color-scheme dark)
    base-dark = #282c35
    --brand-color #4dc67d
    
    --body-background mix(black, base-dark, 25%)
    --card-background base-dark
    --zebra-stripe mix(black, base-dark, 10%)

    --border #444
    --input rgba(white, .85)
    --label-background transparent
    --label-border #555 // dark mode only
    --label-color #eee
    --symbol rgba(white, .5)
    --text rgba(white, .7)
    --warning #db4d4d
