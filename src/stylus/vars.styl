background-dark = #262626
background-light = #f9f9f9

:root
  // Layout and typography.
  --fineprint rem(12)
  --grid-gap grid-gap
  --header-height rem(48)
  --input rem(20)
  --site-header rem(16)
  --table rem(13)
  --table-padding-x em(12)
  --table-padding-y em(8)

  @media breakpoint.medium
    --fineprint rem(14)

    --grid-gap grid-gap-medium
    --header-height rem(60)
    --site-header rem(20)
    --table rem(15)

  @media breakpoint.large
    --table-padding-x em(16)

  // Light/dark theme.
  --brand-color #00ad45

  --body-background background-light
  --header-background rgba(background-light, .33)
  --card-background white
  --zebra-stripe mix(black, white, 3%)
  
  --border #ccc
  --input black
  --label-background #f7f7f7
  --label-color #aaa
  --symbol rgba(black, .5) 
  --text rgba(black, .8)
  --warning #c00

  @media (prefers-color-scheme dark)
    --brand-color #4dc67d
    
    --body-background background-dark
    --header-background rgba(background-dark, .33)
    --card-background mix(white, background-dark, 5%)
    --zebra-stripe mix(white, background-dark, 8%)

    --border #444
    --input rgba(white, .85)
    --label-background transparent
    --label-border #555
    --label-color #888
    --symbol rgba(white, .5)
    --text rgba(white, .7)
    --warning #db4d4d
